{
  "name": "aenrsuvxz_local_dev",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run postcss:dev | npm run rollup:dev | npm run server:dev",
    "build": "npm run postcss:build && npm run rollup:build",

    "postcss:dev": "postcss src/css/input.css -o dev-server/style.css -w",
    "rollup:dev": "rollup -c -i src/js/input.js -o dev-server/app.js -w",
    "server:dev": "lite-server --baseDir='dev-server'",

    "postcss:build": "NODE_ENV=production postcss src/css/input.css -o dist/style.css",
    "rollup:build": "NODE_ENV=production rollup -c -i src/js/input.js -o dist/app.js",

    "lint": "eslint \"src/js/*.js\""
  },
  "keywords": [],
  "author": "dadada.dev",
  "license": "MIT",
  "dependencies": {
    "smoothscroll-polyfill": "^0.4.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "lite-server": "^2.3.0",
    "postcss-cli": "^4.1.1",
    "postcss-import": "^11.0.0",
    "postcss-nested": "^3.0.0",
    "rollup": "^0.52.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.3.4"
  }
}
